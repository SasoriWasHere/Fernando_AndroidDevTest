<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0sp"
        android:layout_height="150sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view14"
            android:layout_width="0sp"
            android:layout_height="0sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.06" />

        <View
            android:id="@+id/view15"
            android:layout_width="0sp"
            android:layout_height="0sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.06" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            app:cardCornerRadius="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view15"
            app:layout_constraintStart_toEndOf="@+id/view14"
            app:layout_constraintTop_toTopOf="parent" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cart_itemBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/purple_200"
                android:foreground="@drawable/picture_border"
                android:padding="1dp">

                <View
                    android:id="@+id/view17"
                    android:layout_width="0sp"
                    android:layout_height="0sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.08" />

                <TextView
                    android:id="@+id/purchase_ItemName"
                    android:layout_width="0sp"
                    android:layout_height="0sp"
                    android:autoSizeMaxTextSize="24sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="start|center_vertical"
                    android:text="Flash T-Shirt"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    app:layout_constraintHeight_percent="0.55"
                    app:layout_constraintStart_toEndOf="@+id/view17"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.7" />

                <TextView
                    android:id="@+id/purchase_item_price"
                    android:layout_width="0sp"
                    android:layout_height="0sp"
                    android:fontFamily="@font/montserrat_extrabold"
                    android:gravity="start"
                    android:text="$70"
                    android:textColor="@color/black"
                    android:textSize="27sp"
                    app:layout_constraintBottom_toTopOf="@+id/view16"
                    app:layout_constraintEnd_toEndOf="@+id/purchase_ItemName"
                    app:layout_constraintStart_toStartOf="@+id/purchase_ItemName"
                    app:layout_constraintTop_toBottomOf="@+id/purchase_ItemName" />

                <ImageView
                    android:id="@+id/purchase_cancelbtn"
                    android:layout_width="0sp"
                    android:layout_height="0sp"
                    android:layout_margin="10sp"
                    android:background="@drawable/circle_white_black"
                    android:padding="6sp"
                    android:src="@drawable/baseline_close_24"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.09" />

                <View
                    android:id="@+id/view16"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#000000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.cardview.widget.CardView>




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>